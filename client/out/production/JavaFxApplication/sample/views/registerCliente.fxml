<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.controllers.RegisterClienteController"
>
    <top>
        <HBox alignment="CENTER">
            <Button
                    translateX="-170"
                    text="back"
                    onAction="#swichBack"
            />
            <Label
                    text="Registar Personal Trainer"
                    textFill="black"
            >
                <font>
                    <Font name="Roboto bold" size="34"/>
                </font>
            </Label>
        </HBox>
    </top>
    <center>
        <VBox>
            <HBox
                    translateX="50"
                    translateY="50"
            >
                <VBox>
                    <Label
                            text="Primeiro Nome"
                    >
                        <font>
                            <Font size="20"/>
                        </font>
                    </Label>
                    <TextField
                            fx:id="firstName"

                            promptText="Insira o nome do Personal Trainer"
                    />
                </VBox>
                <VBox alignment="TOP_RIGHT"
                      translateX="200">
                    <Label
                            text="Ultimo Nome"
                    >
                        <font>
                            <Font size="20"/>
                        </font>
                    </Label>
                    <TextField
                            fx:id="lastName"
                            translateX="30"
                            promptText="Insira o ultimo Nome"
                    />
                </VBox>
                <HBox
                        translateX="50"
                        translateY="100">
                    <VBox>
                        <Label
                                text="N BI"
                        >
                            <font>
                                <Font size="20"/>
                            </font>
                        </Label>
                        <TextField
                                fx:id="nBI"

                                promptText="Insira o numero de BI Personal Trainer"
                        />
                    </VBox>
                    <VBox alignment="TOP_RIGHT"
                          translateX="200">
                        <Label
                                translateX="-40"
                                text="Telefone"
                        >
                            <font>
                                <Font size="20"/>
                            </font>
                        </Label>
                        <TextField
                                fx:id="phone"
                                translateX="30"
                                promptText="Insira o ultimo Nome"
                        />
                    </VBox>
                </HBox>

            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox
                alignment="BOTTOM_RIGHT">
            <Button
                    translateX="-40"
                    translateY="-40"
                    text="Registar"
                    onAction="#registerClient"
            />


        </HBox>
    </bottom>

</BorderPane>
